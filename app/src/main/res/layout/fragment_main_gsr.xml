<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lewetechnologies.app.MainActivity$GSRFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#65CCD1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="320dp"
                android:layout_height="270dp"
                android:background="@drawable/circle_light"
                android:layout_centerInParent="true">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:background="@drawable/circle_bold"
                android:layout_centerInParent="true">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:layout_centerInParent="true"
                android:textSize="52sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:id="@+id/number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSR"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/05/2016 15:35"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="165dp"
                android:textSize="12sp"
                android:textColor="#CBF6F7" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
